{
  "name": "jasmincss",
  "version": "1.0.17",
  "type": "module",
  "description": "A modern, future-proof CSS framework with design philosophy",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "jasmin": "./bin/jasmin.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./js": {
      "import": "./src/js/index.js",
      "types": "./src/js/types/index.d.ts"
    },
    "./config": {
      "types": "./src/js/types/config.d.ts"
    },
    "./css": "./dist/jasmin.css",
    "./css/min": "./dist/jasmin.min.css",
    "./dist/jasmin.css": "./dist/jasmin.css",
    "./dist/jasmin.min.css": "./dist/jasmin.min.css",
    "./plugins/next": "./dist/plugins/nextjs.mjs",
    "./plugins/vite": "./dist/plugins/vite.mjs",
    "./plugin/nextjs": "./dist/plugins/nextjs.mjs",
    "./plugin/vite": "./dist/plugins/vite.mjs"
  },
  "files": [
    "dist",
    "bin",
    "src",
    "JASMINCSS-GUIDE.md"
  ],
  "scripts": {
    "build": "node scripts/build.js && node scripts/generate-docs.js",
    "build:css": "node scripts/build-css.js",
    "build:docs": "node scripts/generate-docs.js",
    "dev": "node scripts/dev.js",
    "test": "node --test tests/**/*.test.js",
    "test:browser": "npx playwright test --config=tests/browser/playwright.config.js",
    "test:a11y": "npx playwright test tests/accessibility/",
    "test:perf": "node tests/performance/benchmark.js",
    "test:all": "npm run test && npm run test:browser && npm run test:a11y",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepublishOnly": "npm run build",
    "postinstall": "echo '\\nðŸŒ¸ JasminCSS installed! See JASMINCSS-GUIDE.md in node_modules/jasmincss for all available classes.\\n'"
  },
  "keywords": [
    "css",
    "framework",
    "utility-first",
    "components",
    "tailwind",
    "design-system",
    "jasmin",
    "nextjs",
    "react",
    "vue"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jasmaine/JasminCSS"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "cssnano": "^6.0.2",
    "fast-glob": "^3.3.2",
    "inquirer": "^9.2.12",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.32"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "esbuild": "^0.19.10",
    "serve": "^14.2.0",
    "vitepress": "^1.6.4"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "vite": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    },
    "vite": {
      "optional": true
    }
  }
}
